<div id="left">
	<div>
		<% form_tag search_events_path do -%>
			<%= hidden_field_tag :year %>
			<p>
				<%= label_tag :keywords %>
				<%= text_field_tag :keywords -%>
			</p>
				<%= check_box_tag 'categories[Accidents]' %>
				<%= label_tag :accidents %>
				<%= check_box_tag 'categories[Crime]' %>
				<%= label_tag :crime %>
				<%= check_box_tag 'categories[Cultural]' %>
				<%= label_tag :cultural %>
				<%= check_box_tag 'categories[Economy]' %>
				<%= label_tag :economy %>
				<%= check_box_tag 'categories[Politics]' %>
				<%= label_tag :politics %>
				<%= check_box_tag 'categories[Science]' %>
				<%= label_tag :science %>
				<%= check_box_tag 'categories[War]' %>
				<%= label_tag :war %>
			</p>
			<p>
				<%= submit_tag "Get events" %>
			</p>
		<% end -%>
		<div id="events">
			<%= render :partial => 'events/events_list' %>
		</div>
	</div>
</div>

<div id="right">
	<div>
		<div id="slider"><div id="handle"></div></div>
		<div id="map"></div>
	</div>
</div>
